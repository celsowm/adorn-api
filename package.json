{
  "name": "adorn-api",
  "version": "1.0.7",
  "description": "Stage-3 decorator-first OpenAPI + routing toolkit",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.js",
      "require": "./dist/express.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "require": "./dist/schema/index.cjs"
    },
    "./metal": {
      "types": "./dist/metal/index.d.ts",
      "import": "./dist/metal/index.js",
      "require": "./dist/metal/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "adorn-api": "./dist/cli.cjs",
    "adorn-example": "./dist/scripts/adorn-example.cjs"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "check": "npm run typecheck && npm run test",
    "build:js": "tsup src/index.ts src/express.ts src/cli.ts src/schema/index.ts src/metal/index.ts --format esm,cjs --out-dir dist --sourcemap --no-splitting && tsup scripts/adorn-example.ts --format cjs --out-dir dist/scripts --sourcemap --no-splitting",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "test": "npm run build && vitest run",
    "test:staleness": "npm run build && vitest run test/cache/staleness.test.ts",
    "dev": "tsx src/cli.ts dev",
    "example": "tsx scripts/run-example.ts",
    "example:list": "tsx scripts/adorn-example.ts --list",
    "example:blog-platform": "npm run example -- blog-platform",
    "example:task-manager": "npm run example -- task-manager",
    "example:basic": "npm run example -- basic",
    "examples:install": "cd examples/basic && npm install"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "metal-orm": "^1.0.71",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.9.0"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^9.39.2",
    "express": "^5.2.1",
    "rimraf": "^6.0.0",
    "supertest": "^7.1.4",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "vitest": "^2.0.0"
  }
}
