{
  "name": "adorn-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "vitest": "vitest",
    "test": "npm run build && npm run vitest run",
    "openapi": "npm run build && node dist/src/cli/openapi.js./dist/tests/e2e/controllers/users.controller.js --out./openapi.json",
    "manifest": "npm run build && node dist/src/cli/manifest.js./dist/tests/e2e/controllers/users.controller.js",
    "check": "npm run check:types && npm run check:lint && npm run check:security && npm run check:deps && npm run check:format && npm run check:build && npm run check:test",
    "check:types": "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters --noImplicitReturns --noFallthroughCasesInSwitch --exactOptionalPropertyTypes",
    "check:lint": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0",
    "check:security": "eslint src/**/*.ts tests/**/*.ts --max-warnings 0 --rule 'security/recommended: error'",
    "check:deps": "npm audit --audit-level high",
    "check:format": "prettier --check src/**/*.ts tests/**/*.ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "check:build": "npm run clean && npm run build",
    "check:test": "npm run test"
  },
  "dependencies": {
    "express": "^5.2.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "metal-orm": "^1.0.59",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
