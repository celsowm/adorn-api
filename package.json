{
  "name": "adorn-api",
  "version": "0.0.1",
  "description": "A modern TypeScript API framework using standard decorators",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "api",
    "framework",
    "typescript",
    "decorators",
    "openapi",
    "express"
  ],
  "author": "Celsowm",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "zod": "^3.22.0",
    "swagger-ui-express": "^5.0.0",
    "ts-morph": "^21.0.0"
  }
}
