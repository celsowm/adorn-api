{
  "name": "adorn-api",
  "version": "0.1.0",
  "description": "Stage-3 decorator-first OpenAPI + routing toolkit",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.js",
      "require": "./dist/express.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "adorn-api": "./dist/bin/adorn-api.cjs"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "check": "npm run typecheck && npm run test",
    "build:js": "tsup src/index.ts src/express.ts src/cli.ts --format esm,cjs --out-dir dist --sourcemap",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "test": "vitest run",
    "test:staleness": "vitest run test/cache/staleness.test.ts",
    "dev": "tsx src/cli.ts dev"
  },
  "dependencies": {
    "typescript": "^5.9.0"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "express": "^5.2.1",
    "rimraf": "^6.0.0",
    "supertest": "^7.1.4",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "vitest": "^2.0.0"
  }
}
