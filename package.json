{
  "name": "adorn-api",
  "version": "0.0.1",
  "description": "A modern TypeScript API framework using standard decorators",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "api",
    "framework",
    "typescript",
    "decorators",
    "openapi",
    "express"
  ],
  "author": "Celsowm",
  "license": "MIT",
  "devDependencies": {
    "@eslint/config-array": "^0.23.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/object-schema": "^3.0.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.27",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "express": "^4.18.0",
    "swagger-ui-express": "^5.0.0",
    "ts-morph": "^21.0.0",
    "zod": "^3.22.0"
  }
}
