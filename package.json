{
  "name": "adorn-api",
  "version": "1.0.4",
  "description": "Stage-3 decorator router + OpenAPI, with optional MetalORM integration",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "default": "./dist/express.js"
    },
    "./metal-orm": {
      "types": "./dist/metal-orm.d.ts",
      "default": "./dist/metal-orm.js"
    },
    "./transform": {
      "types": "./dist/compiler/transform/index.d.ts",
      "default": "./dist/compiler/transform/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^5.2.1",
    "metal-orm": "^1.0.64"
  },
  "peerDependencies": {
    "ts-patch": "^3.0.0",
    "typescript": "^5.9.0"
  },
  "peerDependenciesMeta": {
    "ts-patch": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-patch": "^3.0.0",
    "ts-transformer-keys": "^0.4.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "check": "npm run lint && npm run typecheck && npm run check:decorated-returns && npm run test",
    "lint": "eslint src test --ext .ts",
    "check:decorated-returns": "node scripts/check-decorated-returns.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run test/e2e",
    "test:transformer": "npx tsx test/transformer-inference.test.ts",
    "test:reflection": "npx tsx test/reflection.test.ts",
    "ts-patch:install": "ts-patch install -s"
  }
}
