{
    "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    // "experimentalDecorators": false, <--- ENSURE THIS IS FALSE OR OMITTED
    "emitDecoratorMetadata": false // Standard decorators don't use this
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
